       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <import resource="converter.xml"/>
    
    <context:annotation-config/>
  
    <bean class="net.paulgray.mockrest.MockCourseService"/>
    <bean class="net.paulgray.mockrest.MockEnrollmentService"/>
    <bean class="net.paulgray.mockrest.MockUserService"/>
    <bean class="net.paulgray.mockrest.MockAnnouncementService"/>
    <bean class="net.paulgray.mockrest.MockDiscussionService"/>
    
    <mvc:annotation-driven conversion-service="conversionService"/>
    
</beans>
